@model postcard.Models.Home
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <a class="" asp-area="" asp-controller="Home" asp-action="Index"><img class="logo" src="images/cloud_treinamentos_-_escolhida_-_1.png" /></a>
    <h5>Host: @Model.hostip</h5>
</div>
<div class="container text-center">
    <div class="row">
        <div class="col">
            <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="UploadFile">
                <input class="form-control uploadform" type="file" name="files" multiple />
                 <input type="submit" value="Upload" class="btn btn-primary"/>
            </form>
        </div>
    </div>
</div>
